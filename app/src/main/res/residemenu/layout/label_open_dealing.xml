<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/open_dealing_background">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:text="@string/label_open_dealing_title"
        style="@style/BoldText"
        android:textSize="16sp"
        android:textColor="@color/dealingListUpOrderColor"
        android:id="@+id/tvCloseDealingTitle" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/active"
            style="@style/LigthText"
            android:id="@+id/tvActiveTitle"
            android:textSize="12sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="30"
            style="@style/BoldText"
            android:id="@+id/tvActive"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/amount"
            style="@style/LigthText"
            android:id="@+id/tvAmountTitle"
            android:textSize="12sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="30"
            style="@style/BoldText"
            android:id="@+id/tvAmount"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/time"
            style="@style/LigthText"
            android:id="@+id/tvTimeTitle"
            android:textSize="12sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="30"
            style="@style/BoldText"
            android:id="@+id/tvTime"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>