<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/preview</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/empty_items_dealings</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LigthText">
        <item name="android:textColor">@color/textFiledColors</item>
    </style>

    <style name="MenuItem" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="BoldText" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="UpOrderStyle">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textColor">@color/dealingListUpOrderColor</item>
    </style>
    <style name="DownOrderStyle">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textColor">@color/dealingListDownOrderColor</item>
    </style>

    <style name="SemiboldText" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    </style>

    <style name="AdditionalText" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Light.ttf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SugnupLinkStyle" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SupportChatStyle" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="ContentMessageSupportChatStyle" parent="SupportChatStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DateMessageSupportChatStyle" parent="SupportChatStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/chart_values</item>
    </style>

    <style name="EditText" parent="LigthText">
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center</item>
        <item name="colorControlNormal">@color/line_text_view</item>
        <item name="colorControlActivated">@color/line_text_view</item>
        <item name="colorControlHighlight">@color/line_text_view</item>
        <item name="colorAccent">@color/line_text_view</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/chart_values</item>
        <item name="android:textColorHint">@color/chart_values</item>
        <item name="colorControlNormal">@color/chart_values</item>
        <item name="colorControlActivated">@color/chart_values</item>
        <item name="colorControlHighlight">@color/chart_values</item>
        <item name="colorAccent">@color/chart_values</item>
        <item name="colorPrimary">@color/line_text_view</item>
        <item name="colorPrimaryDark">@color/line_text_view</item>
        <item name="android:colorBackground">@color/line_text_view</item>
        <item name="android:colorFocusedHighlight">@color/line_text_view</item>
    </style>

    <style name="AccentButtonStyle" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="DealingTitleStyle">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/dealingListTitlesColor</item>
    </style>

    <style name="FaqQuestionsTextNames">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FaqQuestionsContentText">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>
</resources>
