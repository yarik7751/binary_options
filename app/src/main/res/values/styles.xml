<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#b3ffffff</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LigthText">
        <item name="android:textColor">@color/textFiledColors</item>
    </style>

    <style name="MenuItem" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="BoldText" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="UpOrderStyle">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textColor">@color/dealingListUpOrderColor</item>
    </style>
    <style name="DownOrderStyle">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textColor">@color/dealingListDownOrderColor</item>
    </style>

    <style name="SemiboldText" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    </style>

    <style name="AdditionalText" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Light.ttf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SugnupLinkStyle" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText" parent="LigthText">
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AccentButtonStyle" parent="LigthText">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="DealingTitleStyle">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/dealingListTitlesColor</item>
    </style>

    <style name="FaqQuestionsTextNames">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FaqQuestionsContentText">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
