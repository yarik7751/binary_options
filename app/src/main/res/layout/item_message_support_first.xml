<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello world!ujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujujuj"
            android:textColor="@color/chart_values"
            android:background="@drawable/green_first"
            android:textSize="16sp"
            android:gravity="left"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="24dp"
            android:layout_marginRight="4dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/chat_logo"
        android:layout_gravity="top" />

</LinearLayout>